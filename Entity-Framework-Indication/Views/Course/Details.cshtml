@model Course
@{
    ViewData["Title"] = "Details";
}

<h1>Student Details</h1>

<table class="table-active offset-1">
    <tr>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <td>@Model.Subject</td>
    </tr>
    <tr>
        @if (Model.Teacher != null)
        {
            <td>The teacher for this course is: @Model.Teacher</td>
        }
        else
        {
            <td>There is no teacher for this course! Consider adding one.</td>
        }
    </tr>
    <tr>
        @if (Model.StudentsCourses != null)
        {
            foreach (var item in Model.StudentsCourses)
            {
                <td>@item.Student.FirstName</td>
                <td>@item.Student.SecondName</td>
                <td>@item.Student.SchoolYear</td>
                <td>@item.Student.PhoneNumber</td>
                @*<td>@item.Course.Grades</td>*@
                @if (Model.Assignments != null)
                {
                    <td>Assignments:</td>
                    foreach (var value in Model.Assignments)
                    {
                        <td>@value.Title</td>
                        <td>@value.Course</td>
                        <td>@value.Subject</td>
                        <td>@value.Description</td>
                        <td>@value.DueToDate</td>
                    }
                }
            }
        }
        else
        {
            <td>This course doesn't have any students... Consider adding some.</td>
        }
    </tr>
    <tr>
        <td>
            <a asp-action="AddStudents" asp-controller="Course" asp-route-id="@Model.Id">
                <input type="hidden" value="@Model.Id" />
                <input type="submit" class="btn btn-info" value="Add students" />
            </a>

            <a asp-action="Edit" asp-controller="Course" asp-route-id="@Model.Id">
                <input type="hidden" value="@Model.Id" />
                <input type="submit" class="btn btn-warning" value="Edit" />
            </a>
            <a asp-action="Index" asp-controller="Course">
                <input type="submit" class="btn btn-primary" value="Return" />
            </a>
        </td>
    </tr>
</table>