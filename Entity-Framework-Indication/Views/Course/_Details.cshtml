@model StudentsCourses
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<br />
<h1 class="offset-5">@Model.Course.Title</h1>
<hr />
<br />

<table class="table-active offset-4 col-4 border">
    <tr>
        <td>@Model.Course.Title</td>
    </tr>
    <tr>
        <td>@Model.Course.Subject</td>
    </tr>
    <tr>
        @if (Model.Course.Teacher != null)
        {
            <td><p>The teacher for this course is: @Model.Course.Teacher</p></td>
        }
        else
        {
            <td><p>There is no teacher for this course! Consider adding one.</p></td>
        }
    </tr>
    @if (Model.Course.StudentsCourses != null)
    {
        <tr>
            <td><h5>Students in selected course</h5></td>
        </tr>
        <tr class="row border" style="margin: 0;">
            <th class="col-3">Firstname</th>
            <th class="col-3">Secondname</th>
            <th class="col-3">Class</th>
            <th class="col-3">Phonenumber</th>
        </tr>
        @foreach (var item in Model.Course.StudentsCourses)
        {
            <tr class="row border" style="margin: 0;">
                <td class="col-3">@item.Student.FirstName</td>
                <td class="col-3">@item.Student.SecondName</td>
                <td class="col-3">@item.Student.SchoolYear</td>
                <td class="col-3">@item.Student.PhoneNumber</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td><p>This course doesn't have any students... Consider adding some.</p></td>
        </tr>
    }
    @if (Model.Course.Assignments != null)
    {
        <tr>
            <td>Assignments:</td>
        </tr>
        foreach (var item in Model.Course.Assignments)
        {
            <tr>

                <td>@item.Title</td>
                <td>@item.Course</td>
                <td>@item.Subject</td>
                <td>@item.Description</td>
                <td>@item.DueToDate</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td><p>There's currently no assignments to this course. Consider adding some</p></td>
        </tr>
    }
    <tr>
        <td>
            <a asp-action="AddStudents" asp-controller="Course" asp-route-id="@Model.CourseId">
                <input type="hidden" value="@Model.CourseId" />
                <input type="submit" class="btn btn-info" value="Add students" />
            </a>

            <a asp-action="Edit" asp-controller="Course" asp-route-id="@Model.CourseId">
                <input type="hidden" value="@Model.CourseId" />
                <input type="submit" class="btn btn-warning" value="Edit" />
            </a>
            <a asp-action="Index" asp-controller="Course">
                <input type="submit" class="btn btn-primary" value="Return" />
            </a>
        </td>
    </tr>
</table>
