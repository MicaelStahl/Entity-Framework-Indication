@model Student
@{
    ViewData["Title"] = "Index";
}
<hr />
<h3 class="offset-1">Create new student</h3>
<br />
<hr />

<form method="post" class="offset-1" asp-action="Create" asp-controller="Student">
    <input type="text" asp-for="FirstName" placeholder="First name.." value="" />
    <br />
    <br />
    <input type="text" asp-for="SecondName" placeholder="Second name.." value="" />
    <br />
    <br />
    <input type="text" asp-for="SchoolYear" min="1" max="99" placeholder="Schoolyear.." value="" />
    <br />
    <br />
    <input type="text" asp-for="PhoneNumber" placeholder="Phonenumber.." value="" />
    <br />
    <br />
    <input type="submit" class="btn btn-info" value="Create" />
</form>