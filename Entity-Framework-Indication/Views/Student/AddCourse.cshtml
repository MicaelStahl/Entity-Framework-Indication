@model Entity_Framework_Indication.ViewModels.StudentsCourses
@*@model List<StudentsCourses>*@
@{
    ViewData["Title"] = "Edit";
}

<h1>Student Edit</h1>

<form method="post" class="form-text offset-1">
    <input type="text" asp-for="Student.FirstName" value="@Model.Student.FirstName" disabled />
    <label>Firstname</label>
    <br />
    <br />
    <input type="text" asp-for="Student.SecondName" value="@Model.Student.SecondName" disabled />
    <label>Secondname</label>
    <br />
    <br />
    <input type="text" asp-for="Student.SchoolYear" value="@Model.Student.SchoolYear" disabled />
    <label>Schoolyear</label>
    <br />
    <br />
    <input type="text" asp-for="Student.PhoneNumber" value="@Model.Student.PhoneNumber" disabled />
    <label>Phonenumber</label>
    <br />
    <br />
    @if (Model.Student.Courses != null)
    {
        foreach (var item in Model.Student.Courses)
        {
            <input type="text" value="@item.Course" disabled />
        }
    }
    else
    {
        <p>@Model.Student.FirstName @Model.Student.SecondName doesn't have any classes.</p>
    }
    <br />
    <a asp-action="Edit" asp-controller="Student">
        <input type="submit" class="btn btn-warning" value="Submit" />
    </a>

    <a asp-action="Index" asp-controller="Home">
        <input type="submit" class="btn btn-primary" value="Go back" />
    </a>
    <a asp-action="Remove" asp-controller="Student">
        <input type="submit" class="btn btn-danger" value="Remove" />
    </a>
</form>

<table>
    <thead>
        <tr>
            <th>Add course</th>
            <th>CourseId</th>
            <th>Course</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in Model.Student.Courses)
            {
                <td>
                    <input type="checkbox" />
                </td>
                <td>@item.CourseId</td>
                <td>@item.Course</td>
            }
        </tr>
    </tbody>
</table>