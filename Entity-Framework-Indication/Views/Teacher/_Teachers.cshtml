@model Teacher

<tr class="row">
    <td class="col-1 border">@Model.Id</td>
    <td class="col-2 border">@Model.FirstName</td>
    <td class="col-2 border">@Model.SecondName</td>
    <td class="col-2 border">@Model.Specification</td>
    <td class="col-2 border">@Model.PhoneNumber</td>

    <td class="border">
    <a asp-action="Edit" asp-controller="Teacher" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Details" asp-controller="Teacher" asp-route-id="@Model.Id" class="btn btn-primary">Details</a>
    <a asp-action="Remove" asp-controller="Teacher" asp-route-id="@Model.Id" class="btn btn-danger">Remove</a>
    </td>
</tr>