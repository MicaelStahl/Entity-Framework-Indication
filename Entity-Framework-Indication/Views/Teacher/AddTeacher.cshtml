@model List<Teacher>
@{
    ViewData["Title"] = "AddTeacher";
}

<hr />
<h3 class="offset-1">Add teacher to course</h3>
<br />
<hr />

<table class="table-striped offset-1 container">
    <thead>
        <tr class="row">
            <th class="col-2 border">Firstname</th>
            <th class="col-2 border">Secondname</th>
            <th class="col-4 border">Specification</th>
            <th class="col-2 border">Phonenumber</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                @await Html.PartialAsync("_AddTeacher", item);
            }
        }
    </tbody>
</table>
<br />
<br />
<a class="offset-1" asp-action="Index" asp-controller="Course">
    <input type="submit" class="btn btn-primary" value="Return" />
</a>